    "@uniswap/v3-sdk": "^3.10.0",
    "axios": "^1.5.0",
    "bignumber.js": "^9.1.2",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "node-cron": "^3.0.2",
    "telegraf": "^4.14.0",
    "winston": "^3.10.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.0",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "hardhat": "^2.17.0",
    "jest": "^29.6.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
